<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >

<!--style="@style/CustomStyle" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_name"
        style="@style/WhiteText"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/name"
        style="@style/WhiteText"
        android:padding="5dp"
        android:layout_margin="1dp"
        android:background="@drawable/border"/>
<!-- -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_date"
        style="@style/WhiteText"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_margin="1dp"
        android:id="@+id/newcontactdatelayout"
        android:background="@drawable/border">

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/editdate"
        android:editable="false"
        style="@style/WhiteText"/>


        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/datepickerbutton"
            android:background="@drawable/calendar"

            />
        </LinearLayout>




<!-- -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_phone"
        style="@style/WhiteText"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/number"
        android:inputType="phone"
        android:padding="5dp"
        android:layout_margin="1dp"
        android:background="@drawable/border"/> <!--Vet ikke om denne fungerer riktig!-->
<!-- -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/contact_message"
        style="@style/WhiteText"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/message"
        android:padding="5dp"
        android:layout_margin="1dp"
        android:background="@drawable/border"/>
<!--- -->
    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/newcontactbutton"
        android:background="@drawable/newkontakter"/>
</LinearLayout>